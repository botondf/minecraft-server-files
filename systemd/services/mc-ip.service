[Unit]
Description=Minecraft Server - Update Public IP (service)
Requires=network-online.target mc-ip.timer

[Service]
User=minecraft
Group=minecraft
WorkingDirectory=/home/minecraft/scripts
#SET REAL PATH
Type=simple
ExecStart=update-ip.sh
#SET REAL PATH
