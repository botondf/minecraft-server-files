[Unit]
Description=Minecraft Server - Executable (service)
Wants=network-online.target
Requires=mc-backup.service mc-backup.timer

[Service]
User=minecraft
Group=minecraft
WorkingDirectory=/home/minecraft/survival
#SET CORRECT PATH LATER
Type=simple
#ProtectSystem=full
#PrivateDevices=true
#ProtectHome=true
NoNewPrivileges=true
ExecStart=scripts/start.sh
ExecStop=scripts/stop.sh
#SET REAL PATH

Nice=5
#Restart=on-success
#RestartSec=10

[Install]
WantedBy=multi-user.target
#=~ to default.target (?)
